[Unit]
Description=Trust Monitoring System
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/lanc/trust-monitoring-system/scripts
ExecStart=/home/ubuntu/lanc/trust-monitoring-system/scripts/target/release/trust-monitoring-system
Restart=always
RestartSec=5
Environment=RUST_LOG=info

[Install]
WantedBy=multi-user.target
